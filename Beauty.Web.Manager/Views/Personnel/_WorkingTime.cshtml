@model List<Beauty.Application.Modules.Personnel.ViewModel.PersonnelWorkingTimeViewModel>
@using Common.Crosscutting.Utility;
@{

    var daysOfWeek = DateTimeUtility.GetDaysOfWeek();
    var years = DateTimeUtility.GetYearRange(null, 3);
}

@using (Html.BeginForm("UpdateSalon", "Salon", FormMethod.Post, new { id = "saloninfo_frm" }))
{

    @Html.Hidden("PersonnelId")
    <div class="beauty-form beauty-form--label-right">
        <div class="beauty-form__body">
            <div class="beauty-section beauty-section--first">
                <div class="beauty-section__body">
                    <div class="form-group row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group row">
                                <div class="col-md-2  col-lg-2 col-sm-12">
                                    <select class="form-control form-control-sm" id="cal_year">
                                        @for (int i = 0; i < years.Count; i++)
                                        {
                                            <option value="@years[i]">@years[i]</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6  col-lg-6 col-sm-12">
                                    <span class="beauty-badge beauty-badge--md beauty-badge--metal">1</span> انتخاب نشده&nbsp;
                                    <span class="beauty-badge beauty-badge--md beauty-badge--success">1</span> انتخاب شده&nbsp;
                                    <span class="beauty-badge beauty-badge--md beauty-badge--danger">1</span> تعطیل رسمی
                                </div>
                                <div class="col-md-2 col-lg-2 col-sm-12">
                                </div>
                                <div class="col-md-1 col-lg-1 col-sm-12">
                                    <span class="badge badge-primary">ساعت شروع کار سالن: @ViewBag.OpeningTime</span>
                                </div>
                                <div class="col-md-1 col-lg-1 col-sm-12">
                                    <span class="badge badge-primary">ساعت پایان کار سالن: @ViewBag.ClosingTime</span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12  col-lg-12 col-sm-12">
                                    <div id="days_calendar">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    var model_data = @Html.Raw(Json.Serialize(Model));
</script>
<script src="~/lib/persian-date.js"></script>
<script src="~/js/pages/_personnelWorkingDateTime.js"></script>
