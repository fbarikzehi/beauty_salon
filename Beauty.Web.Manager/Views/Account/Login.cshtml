@model Beauty.Application.Modules.Account.User.Messaging.LoginRequest
@{
    ViewData["Title"] = PageTitleResource.Login;
    Layout = "_LayoutAccount";
}

<section class="row flexbox-container" style=" font-family: 'iransansweb';">
    <div class="col-xl-8 col-11 d-flex justify-content-center">
        <div class="card bg-authentication rounded-0 mb-0">
            <div class="row m-0">
                <div class="col-lg-6 d-lg-block d-none text-center align-self-center px-1 py-0">
                    <img src="~/theme/app-assets/images/pages/login.png" alt="لوگوی سالن">
                </div>
                <div class="col-lg-6 col-12 p-0">
                    <div class="card rounded-0 mb-0 px-2">
                        <div class="card-header pb-1">
                            <div class="card-title m-center">
                                <h4 class="mb-0">آیریانا</h4>
                            </div>
                        </div>
                        <p class="px-2 text-center">وارد حساب کاربری خود شوید</p>
                        <div class="card-content">
                            <div class="card-body pt-1">
                                <form asp-controller="" asp-action="" autocomplete="off" id="login_form">
                                    <fieldset class="form-label-group form-group position-relative has-icon-left">
                                        <input class="form-control" type="text" placeholder="نام کاربری" asp-for="Entity.Username" autocomplete="off">
                                        <div class="form-control-position">
                                            <i class="feather icon-user"></i>
                                        </div>
                                        <label for="user-name">نام کاربری</label>
                                    </fieldset>
                                    <fieldset class="form-label-group position-relative has-icon-left">
                                        <input class="form-control" type="password" placeholder="رمزعبور" asp-for="Entity.Password" autocomplete="off">
                                        <div class="form-control-position">
                                            <i class="feather icon-lock"></i>
                                        </div>
                                        <label for="user-password">رمزعبور</label>
                                    </fieldset>
                                    <div class="form-group d-flex justify-content-between align-items-center">
                                        <div class="text-left">
                                            <fieldset class="checkbox">
                                                <div class="vs-checkbox-con vs-checkbox-primary">
                                                    <input type="checkbox" asp-for="Entity.RememberMe">
                                                    <span class="vs-checkbox">
                                                        <span class="vs-checkbox--check">
                                                            <i class="vs-icon feather icon-check"></i>
                                                        </span>
                                                    </span>
                                                    <span class="">منو یادت باشه</span>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="text-right"><a asp-area="" asp-controller="Home" asp-action="Index" class="card-link">رمزعبور خود را فراموش کرده ام؟</a></div>
                                    </div>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary float-left btn-inline">ثبت نام</a>
                                    <button type="button" id="login_submit" class="btn btn-primary float-right btn-inline ladda-button" data-style="expand-right"><span class="ladda-label">ورود</span></button>
                                </form>
                            </div>
                        </div>
                        <div class="login-footer">
                            <div class="divider">
                                <div class="divider-text">با شبکه های اجتماعی وارد شوید</div>
                            </div>
                            <div class="footer-btn d-inline">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-facebook"><span class="fa fa-facebook"></span></a>
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-twitter white"><span class="fa fa-twitter"></span></a>
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-google"><span class="fa fa-google"></span></a>
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-github"><span class="fa fa-github-alt"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/pages/login.js" asp-append-version="true"></script>

}